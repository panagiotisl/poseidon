<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        Ã—
    </button>
    <h3 id="myModalLabel"><%= @notification.subject %>
        <% unless @box.eql?'trash' %>
        <%= link_to(image_tag('cancel.png', :alt => t('mailboxer.delete'), :title => t('mailboxer.delete')),
        conversation_path(@notification, :location => 'conversation', :box => @box),
        :confirm => t('mailboxer.delete_confirm', :object => @notification.subject),
        :method => :delete, :remote => true) %>
        <% end %>
    </h3>
</div>
<div class="modal-body">
	
    <div class="marginTop messages">
        <%= render :partial => '/notifications/notification_big', :locals =>{:notification => @notification} %>
        
    </div>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">
        Close
    </button>
    <% if false %>
    <button class="btn btn-primary">
        Save changes
    </button>
    <% end %>
</div>
<% if false %>
<h4><%= t("message.participants") %>:</h4>

<% end %>