<% if signed_in? %>
  <div class="row">
    <div class="span12">
   	  <div class="nav nav-pills roundBox">
   	  	<%= gravatar_for current_user, size: 64 %>  		
      <h3><%= link_to "Hello #{current_user.name}!", current_user %></h3>
      <% if sce? %>
        <%= link_to current_user.shipping_company.name, current_user.shipping_company %>
      <% elsif ase? %>
        <%= link_to current_user.agent.name, current_user.agent %>
      <% end %>
      </div>
	</div>
	<div class="row">
	<div class="span12">
      <% if sce? %>
        <%
          @fleets = current_user.shipping_company.fleets.paginate(page: params[:page])
          @ships = current_user.shipping_company.ships.paginate(page: params[:page])
          @voyages = current_user.shipping_company.voyages.paginate(page: params[:page])
        %>
        <div class="span3"><%= render "shared/left_menu" %></div>
        
      	<!-- <div class="span8"><%= render "shipping_companies/content" %></div> -->
      <% elsif ase? %>
        <% @voyages_ports = current_user.agent.voyages_ports.paginate(page: params[:page]) %>
        <div class="span3 roundBox">
       	  <h4>Voyages</h4>
    	  <%= will_paginate @voyages_ports %>
            <ul class="voyages">
              <%= render @voyages_ports %>
            </ul>
          <%= will_paginate @voyages_ports %>
        </div>
      <% end %>
    </div>
	</div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to POSEIDON</h1>

    <h2>
      You can register a shipping company or a supplier by following
      one of the links below.
    </h2>

    <%= link_to "New Shipping Company", new_shipping_company_path, 
                                class: "btn btn-large btn-primary" %>

    <%= link_to "New Supplier", new_agent_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %> 
