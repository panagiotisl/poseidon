<% provide(:title, @title) %>
<div class="row">
    <div class="span12">
        <%= render "/shared/nav" %>
        <div class="row">
            <div class="span3">
                <%= render "shared/left_menu" %>
            </div>
            <div class="span8">
                <h3><%= "Edit fleet" %></h3>
                <%= form_for @fleet , url: shipping_company_fleet_path do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
                <%= f.label :name %>
                <%= f.text_field :name %>
                <%= f.hidden_field :shipping_company_id, :value => @shipping_company.id %>
                <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
                <% end %>
            </div>
        </div>
    </div>
</div>
