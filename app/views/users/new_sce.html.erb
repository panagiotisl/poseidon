<% provide(:title, @title) %>
<div class="row">
    <div class="span12">
        <%= render "/shared/nav" %>
        <div class="row">
            <div class="span3">
                <%= render "shared/left_menu" %>
            </div>
            <div class="span8">
                <h3><%= @title %></h3>
                <%= form_for @user, url: shipping_company_create_sce_path do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
                <%= f.label :name %>
                <%= f.text_field :name %>
                <%= f.label :email %>
                <%= f.text_field :email %>
                <%= f.label :password %>
                <%= f.password_field :password %>
                <%= f.label :password_confirmation, "Confirmation" %>
                <%= f.password_field :password_confirmation %>
                <%= f.hidden_field :shipping_company_id, :value => @shipping_company.id %>
                <%= f.submit "Create this account", class: "btn btn-large btn-primary" %>
                <% end %>
            </div>
        </div>
    </div>
</div>
