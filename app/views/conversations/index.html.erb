<% content_for :title do %>
<%=t('message.other') %>
<% end %>
<section id="conversations">
    <div class="conversations roundBox">
        <%= render :partial => '/shared/message_bar' %>
		
		<% if false %>
        <%= render :partial => 'conversations' %>
		<% end %>
        <div class="column-wrap roundBox">
            <div id="content-1">
            	<table class="table table-striped">
            	<% @contacts.each do |contact| %>
					<%= render :partial => 'contact' , :locals =>{:contact => contact} %>
				<% end %>
				</table>
            </div>
            <div id="content-2">
                <div id="content-2-1">
                	<%= @contact["receiver_id"] %>
					<%= render :partial => 'conversations' %>			
                </div>
                <div id="content-2-2">
                	<%= render :partial => 'conversation_full', :locals =>{:conversation => @conversation} %>
                </div>
            </div>
        </div>
    </div>
</section>