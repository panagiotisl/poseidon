<!DOCTYPE html>
<html>
    <head>
        <meta content='width=device-width, initial-scale=1.0' name='viewport'>
        <title><%= full_title(yield(:title)) %></title>
        <%= stylesheet_link_tag "application", media: "all",
        "data-turbolinks-track" => true %>
        <!--[if !IE 7]>
            <style type="text/css">
            #wrap {display:table;height:100%}
            </style>
        <![endif]-->
        <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
        <%= csrf_meta_tags %>
        <%= render 'layouts/shim' %>
    </head>
    <body>
        <div id="wrap">
            <div id="header">
                <%= render 'layouts/header' %>
            </div>
            <div id="main">
                <div class="container">
                    <% if signed_in? %>
                    <div class="row">
                        <% if sce? or ase? %>
                        <div class="span3">
                            <div class="sidebar" data-spy="affix" data-offset-top="30">
                                <%= render "shared/left_menu" %>
                            </div>
                        </div>
                        <div class="span7">
                            <% flash.each do |key, value| %>
                            <div class="alert alert-<%= key %>">
                                <%= value %>
                            </div>
                            <% end %>
                            <%= yield %>
                        </div>
                        <div id="feed_doc" class="span2">
                            <div class="sidebar transparentBox" data-spy="affix" data-offset-top="30">
                                <%= render "shared/feed" %>
                            </div>
                        </div>
                        <div id="feed_doc" class="span2" style="position:fixed; right:10px">
                        </div>
                        <% end %>
                    </div>
                    <% else %>
                    <% flash.each do |key, value| %>
                    <div class="alert alert-<%= key %>">
                        <%= value %>
                    </div>
                    <% end %>
                    <%= yield %>
                    <% end %>
                    <%= debug(params) if Rails.env.development? %>
                </div>
            </div>
        </div>
        <div class="container">
            <%= render 'layouts/footer' %>
        </div>
    </body>
</html>
