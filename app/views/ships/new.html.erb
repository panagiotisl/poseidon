<% provide(:title, @title) %>
<div class="row">
  <%= render "shipping_companies/nav" %>
  <div class="span8">
  	<h3><%= @title %></h3>
    <%= form_for @ship, url: shipping_company_ships_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.hidden_field :shipping_company_id, :value => @shipping_company.id %>
      
      <%= f.submit "Create this ship", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>