<% provide(:title, 'Add an Agent/Supplier') %>
<h1>Add an Agent/Supplier</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@agent) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :telephone %>
      <%= f.text_field :telephone %>

      <%= f.label :country_id, "Country" %>
      <%= select "agent", "country_id", Country.order(:name).all.collect {|p| [ p.printableName, p.id ] }, { :include_blank => true } %>

      <%= f.label :wv, "Are you human?" %>
      <%= recaptcha_tags :ssl => true, :ajax => true %>
      
      <%= f.submit "Create this Agent/Supplier", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
