<% provide(:title, @title) %>
<div class="row">
  <%= render "shipping_companies/nav" %>
  <div class="span8">
  	<h3><%= @title %></h3>
    <%= form_for @voyage, url: shipping_company_ship_voyages_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :port %>
      <%= select "voyage", "port_id", Port.order(:name).all.collect {|p| [ p.name, p.id ] }, { :include_blank => true } %>
 
      <%= f.label :date %>
      <!--<%= f.text_field :date, :id => "datepicker", :value => Date.today %>-->
      <%= f.text_field :date, class: "voyages_date", :value => Date.today %>
      <!--<%= date_select("voyage", "date", :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' }) %>-->

      <%= f.hidden_field :ship_id, :value => params[:ship_id] %>
      
      <%= f.submit "Create this voyage", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>