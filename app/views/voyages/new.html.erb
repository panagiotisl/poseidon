<% provide(:title, @title) %>
<div class="row">
  <div class="span12">
  	<%= render "navShip" %>
  	<h3><%= @title %></h3>
    <%= form_for @voyage, url: shipping_company_fleet_ship_voyages_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :port %>
      <%= select "voyage", "port_id", Port.order(:name).all.collect {|p| [ p.name, p.id ] }, { :include_blank => true } %>
 
      <%= f.label :date %>
      <%= f.text_field :date, class: "voyages_date" %>

      <%= f.hidden_field :ship_id, :value => params[:ship_id] %>
      
      <%= f.submit "Create this voyage", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>